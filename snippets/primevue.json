{
  "Vue3 PrimeVue DataTable": {
    "prefix": "v3prime-table",
    "body": [
      "<script setup lang=\"ts\">",
      "import { ref, onMounted } from 'vue'",
      "",
      "const items = ref([])",
      "const loading = ref(false)",
      "const filters = ref({})",
      "const selectedItems = ref([])",
      "",
      "const columns = [",
      "\t{ field: 'id', header: 'ID' },",
      "\t{ field: 'name', header: 'Name', sortable: true },",
      "\t{ field: 'status', header: 'Status', sortable: true },",
      "\t{ field: 'date', header: 'Date', sortable: true }",
      "]",
      "",
      "const loadData = async (event: any) => {",
      "\ttry {",
      "\t\tloading.value = true",
      "\t\tconst { first, rows, sortField, sortOrder } = event",
      "",
      "\t\t// TODO: Implement API call",
      "\t\tconst response = await fetch(`api/items?page=${first/rows}&size=${rows}`)",
      "\t\tconst data = await response.json()",
      "\t\titems.value = data.items",
      "\t} finally {",
      "\t\tloading.value = false",
      "\t}",
      "}",
      "",
      "onMounted(() => {",
      "\tloadData({ first: 0, rows: 10 })",
      "})",
      "</script>",
      "",
      "<template>",
      "\t<div class=\"card\">",
      "\t\t<DataTable",
      "\t\t\t:value=\"items\"",
      "\t\t\t:paginator=\"true\"",
      "\t\t\t:rows=\"10\"",
      "\t\t\t:loading=\"loading\"",
      "\t\t\t:filters=\"filters\"",
      "\t\t\t:selection=\"selectedItems\"",
      "\t\t\tfilterDisplay=\"menu\"",
      "\t\t\t:rowsPerPageOptions=\"[5, 10, 20, 50]\"",
      "\t\t\tpaginatorTemplate=\"FirstPageLink PrevPageLink PageLinks NextPageLink LastPageLink CurrentPageReport RowsPerPageDropdown\"",
      "\t\t\tcurrentPageReportTemplate=\"Showing {first} to {last} of {totalRecords}\"",
      "\t\t\tresponsiveLayout=\"scroll\"",
      "\t\t\t@page=\"loadData($event)\"",
      "\t\t\tv-model:selection=\"selectedItems\"",
      "\t\t>",
      "\t\t\t<template #header>",
      "\t\t\t\t<div class=\"flex justify-content-between\">",
      "\t\t\t\t\t<Button icon=\"pi pi-plus\" label=\"New\" @click=\"openNew\" />",
      "\t\t\t\t\t<span class=\"p-input-icon-left\">",
      "\t\t\t\t\t\t<i class=\"pi pi-search\" />",
      "\t\t\t\t\t\t<InputText v-model=\"filters['global'].value\" placeholder=\"Search...\" />",
      "\t\t\t\t\t</span>",
      "\t\t\t\t</div>",
      "\t\t\t</template>",
      "",
      "\t\t\t<Column selectionMode=\"multiple\" headerStyle=\"width: 3rem\" />",
      "",
      "\t\t\t<Column",
      "\t\t\t\tv-for=\"col in columns\"",
      "\t\t\t\t:key=\"col.field\"",
      "\t\t\t\t:field=\"col.field\"",
      "\t\t\t\t:header=\"col.header\"",
      "\t\t\t\t:sortable=\"col.sortable\"",
      "\t\t\t/>",
      "",
      "\t\t\t<Column header=\"Actions\" :exportable=\"false\" style=\"min-width:8rem\">",
      "\t\t\t\t<template #body=\"{ data }\">",
      "\t\t\t\t\t<Button icon=\"pi pi-pencil\" class=\"p-button-rounded p-button-success mr-2\" @click=\"editItem(data)\" />",
      "\t\t\t\t\t<Button icon=\"pi pi-trash\" class=\"p-button-rounded p-button-warning\" @click=\"deleteItem(data)\" />",
      "\t\t\t\t</template>",
      "\t\t\t</Column>",
      "\t\t</DataTable>",
      "\t</div>",
      "</template>"
    ],
    "description": "PrimeVue DataTable Template"
  }
} 