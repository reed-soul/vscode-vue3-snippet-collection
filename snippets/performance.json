{
  "Vue3 Dynamic Import": {
    "prefix": "v3lazy",
    "body": [
      "const ${1:Component} = defineAsyncComponent(() =>",
      "\timport('./${2:path/to/component}.vue')",
      ")"
    ],
    "description": "Vue 3 异步组件导入"
  },
  "Vue3 Keep Alive": {
    "prefix": "v3keep",
    "body": [
      "<KeepAlive",
      "\t:include=\"['${1:ComponentName}']\"",
      "\t:max=\"${2:10}\"",
      ">",
      "\t<component :is=\"${3:currentComponent}\" />",
      "</KeepAlive>"
    ],
    "description": "Vue 3 KeepAlive 组件"
  },
  "Vue3 Virtual List": {
    "prefix": "v3virtual",
    "body": [
      "<script setup lang=\"ts\">",
      "import { ref, computed } from 'vue'",
      "",
      "const props = defineProps<{",
      "\titems: any[]",
      "\titemHeight: number",
      "}>())",
      "",
      "const containerHeight = ref(400)",
      "const scrollTop = ref(0)",
      "",
      "const visibleCount = computed(() => ",
      "\tMath.ceil(containerHeight.value / props.itemHeight) + 1",
      ")",
      "",
      "const startIndex = computed(() => ",
      "\tMath.floor(scrollTop.value / props.itemHeight)",
      ")",
      "",
      "const visibleItems = computed(() => ",
      "\tprops.items.slice(startIndex.value, startIndex.value + visibleCount.value)",
      ")",
      "",
      "const handleScroll = (e: Event) => {",
      "\tscrollTop.value = (e.target as HTMLElement).scrollTop",
      "}",
      "</script>",
      "",
      "<template>",
      "\t<div",
      "\t\tclass=\"virtual-list\"",
      "\t\t:style=\"{ height: `${containerHeight}px` }\"",
      "\t\t@scroll=\"handleScroll\"",
      "\t>",
      "\t\t<div",
      "\t\t\tclass=\"virtual-list-phantom\"",
      "\t\t\t:style=\"{ height: `${items.length * itemHeight}px` }\"",
      "\t\t/>",
      "\t\t<div",
      "\t\t\tclass=\"virtual-list-content\"",
      "\t\t\t:style=\"{",
      "\t\t\t\ttransform: `translateY(${startIndex * itemHeight}px)`",
      "\t\t\t}\"",
      "\t\t>",
      "\t\t\t<div",
      "\t\t\t\tv-for=\"item in visibleItems\"",
      "\t\t\t\t:key=\"item.id\"",
      "\t\t\t\tclass=\"virtual-list-item\"",
      "\t\t\t\t:style=\"{ height: `${itemHeight}px` }\"",
      "\t\t\t>",
      "\t\t\t\t<slot :item=\"item\" />",
      "\t\t\t</div>",
      "\t\t</div>",
      "\t</div>",
      "</template>",
      "",
      "<style scoped>",
      ".virtual-list {",
      "\toverflow-y: auto;",
      "\tposition: relative;",
      "}",
      "",
      ".virtual-list-phantom {",
      "\tposition: absolute;",
      "\tleft: 0;",
      "\ttop: 0;",
      "\tright: 0;",
      "\tz-index: -1;",
      "}",
      "",
      ".virtual-list-content {",
      "\tposition: absolute;",
      "\tleft: 0;",
      "\tright: 0;",
      "\ttop: 0;",
      "}",
      "</style>"
    ],
    "description": "Vue 3 虚拟列表组件"
  }
} 