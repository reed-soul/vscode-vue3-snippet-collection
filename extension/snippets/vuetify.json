{
  "Vue3 Vuetify Data Table": {
    "prefix": "v3vuetify-table",
    "body": [
      "<script setup lang=\"ts\">",
      "import { ref, reactive } from 'vue'",
      "",
      "const search = ref('')",
      "const loading = ref(false)",
      "const items = ref([])",
      "",
      "const headers = [",
      "\t{ title: 'ID', key: 'id' },",
      "\t{ title: 'Name', key: 'name' },",
      "\t{ title: 'Status', key: 'status' },",
      "\t{ title: 'Actions', key: 'actions', sortable: false }",
      "]",
      "",
      "const options = reactive({",
      "\tpage: 1,",
      "\titemsPerPage: 10,",
      "\tsortBy: [],",
      "\tgroupBy: [],",
      "})",
      "",
      "const fetchData = async () => {",
      "\ttry {",
      "\t\tloading.value = true",
      "\t\t// TODO: Implement API call",
      "\t\tconst response = await fetch('api/items')",
      "\t\tconst data = await response.json()",
      "\t\titems.value = data.items",
      "\t} finally {",
      "\t\tloading.value = false",
      "\t}",
      "}",
      "</script>",
      "",
      "<template>",
      "\t<v-card>",
      "\t\t<v-card-title>",
      "\t\t\t<v-text-field",
      "\t\t\t\tv-model=\"search\"",
      "\t\t\t\tappend-icon=\"mdi-magnify\"",
      "\t\t\t\tlabel=\"Search\"",
      "\t\t\t\tsingle-line",
      "\t\t\t\thide-details",
      "\t\t\t/>",
      "\t\t</v-card-title>",
      "\t\t<v-data-table",
      "\t\t\t:headers=\"headers\"",
      "\t\t\t:items=\"items\"",
      "\t\t\t:search=\"search\"",
      "\t\t\t:loading=\"loading\"",
      "\t\t\t:items-per-page-options=\"[5, 10, 20, 50]\"",
      "\t\t\tclass=\"elevation-1\"",
      "\t\t>",
      "\t\t\t<template v-slot:item.status=\"{ item }\">",
      "\t\t\t\t<v-chip",
      "\t\t\t\t\t:color=\"item.status === 'active' ? 'green' : 'red'\"",
      "\t\t\t\t\t:text=\"item.status\"",
      "\t\t\t\t\tsize=\"small\"",
      "\t\t\t\t/>",
      "\t\t\t</template>",
      "\t\t\t<template v-slot:item.actions=\"{ item }\">",
      "\t\t\t\t<v-icon",
      "\t\t\t\t\tsize=\"small\"",
      "\t\t\t\t\tclass=\"me-2\"",
      "\t\t\t\t\t@click=\"editItem(item)\"",
      "\t\t\t\t>",
      "\t\t\t\t\tmdi-pencil",
      "\t\t\t\t</v-icon>",
      "\t\t\t\t<v-icon",
      "\t\t\t\t\tsize=\"small\"",
      "\t\t\t\t\t@click=\"deleteItem(item)\"",
      "\t\t\t\t>",
      "\t\t\t\t\tmdi-delete",
      "\t\t\t\t</v-icon>",
      "\t\t\t</template>",
      "\t\t</v-data-table>",
      "\t</v-card>",
      "</template>"
    ],
    "description": "Vuetify Data Table Template"
  }
} 