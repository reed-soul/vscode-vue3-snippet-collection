{
  "Vue3 Form Validation": {
    "prefix": "v3form",
    "body": [
      "<script setup lang=\"ts\">",
      "import { reactive } from 'vue'",
      "import { useField, useForm } from 'vee-validate'",
      "import * as yup from 'yup'",
      "",
      "const schema = yup.object({",
      "\t${1:email}: yup.string().required('${2:Email is required}').email('${3:Invalid email}'),",
      "\t${4:password}: yup.string().required('${5:Password is required}').min(6, '${6:Password too short}')",
      "})",
      "",
      "const { handleSubmit, errors } = useForm({",
      "\tvalidationSchema: schema",
      "})",
      "",
      "const { value: ${1:email} } = useField('${1:email}')",
      "const { value: ${4:password} } = useField('${4:password}')",
      "",
      "const onSubmit = handleSubmit((values) => {",
      "\tconsole.log(values)",
      "})",
      "</script>",
      "",
      "<template>",
      "\t<form @submit.prevent=\"onSubmit\">",
      "\t\t<div class=\"form-group\">",
      "\t\t\t<label for=\"${1:email}\">${7:Email}</label>",
      "\t\t\t<input",
      "\t\t\t\tid=\"${1:email}\"",
      "\t\t\t\tv-model=\"${1:email}\"",
      "\t\t\t\ttype=\"email\"",
      "\t\t\t\t:class=\"{ error: errors.${1:email} }\"",
      "\t\t\t/>",
      "\t\t\t<span class=\"error-text\" v-if=\"errors.${1:email}\">{{ errors.${1:email} }}</span>",
      "\t\t</div>",
      "",
      "\t\t<div class=\"form-group\">",
      "\t\t\t<label for=\"${4:password}\">${8:Password}</label>",
      "\t\t\t<input",
      "\t\t\t\tid=\"${4:password}\"",
      "\t\t\t\tv-model=\"${4:password}\"",
      "\t\t\t\ttype=\"password\"",
      "\t\t\t\t:class=\"{ error: errors.${4:password} }\"",
      "\t\t\t/>",
      "\t\t\t<span class=\"error-text\" v-if=\"errors.${4:password}\">{{ errors.${4:password} }}</span>",
      "\t\t</div>",
      "",
      "\t\t<button type=\"submit\">Submit</button>",
      "\t</form>",
      "</template>",
      "",
      "<style scoped>",
      ".form-group {",
      "\tmargin-bottom: 1rem;",
      "}",
      "",
      ".error {",
      "\tborder-color: red;",
      "}",
      "",
      ".error-text {",
      "\tcolor: red;",
      "\tfont-size: 0.875rem;",
      "}",
      "</style>"
    ],
    "description": "Vue 3 表单验证模板"
  }
} 