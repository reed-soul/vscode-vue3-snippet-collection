{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vscode", "mocha", "glob"],
    "moduleResolution": "node",
    "outDir": "out"
  },
  "include": [
    "src/**/*",
    "test-workspace/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test"]
} 