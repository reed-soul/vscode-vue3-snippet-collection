{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "./extension",
    "outDir": "./extension/out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vscode", "mocha", "glob"],
    "moduleResolution": "node"
  },
  "include": [
    "extension/src/**/*",
    "extension/test/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test"]
} 